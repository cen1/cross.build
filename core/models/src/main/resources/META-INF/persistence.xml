<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="crossbuild">
		<jta-data-source>java:jboss/datasources/CrossBuildDS</jta-data-source>
	
		<class>build.cross.models.jpa.Container</class>
		<class>build.cross.models.jpa.KeyPair</class>
		<class>build.cross.models.jpa.LoadHistory</class>
		<class>build.cross.models.jpa.Platform</class>
		<class>build.cross.models.jpa.Project</class>
		<class>build.cross.models.jpa.ProjectGroup</class>
		<class>build.cross.models.jpa.User</class>
		<class>build.cross.models.jpa.Vm</class>
		<class>build.cross.models.jpa.VmSetting</class>
		
		<class>build.cross.models.jpa.common.BaseEntity</class>
		<class>build.cross.models.jpa.common.BaseUserEntity</class>
		
		<properties>
			<property name="hibernate.default_schema" value="crossbuild"/>
			<!--
			<property name = "hibernate.show_sql" value = "true" />
			-->
		</properties>
		
	</persistence-unit>
</persistence>
